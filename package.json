{
  "name": "@spike-land-ai/hackernews-mcp",
  "version": "0.1.1",
  "description": "MCP server for HackerNews with full read + write support",
  "type": "module",
  "bin": "dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spike-land-ai/hackernews-mcp.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@spike-land-ai/eslint-config": "file:../../Developer/spike-land-ai/.github/packages/eslint-config",
    "@spike-land-ai/tsconfig": "file:../../Developer/spike-land-ai/.github/packages/tsconfig",
    "@types/node": "^25.3.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.27.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "mcp",
    "hackernews",
    "hn",
    "hacker-news"
  ],
  "license": "MIT"
}
